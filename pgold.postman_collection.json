							"mode": "raw",
							"raw": "{\n  \"type\": \"giftcard\",\n  \"name\": \"Amazon\",\n  \"country\": \"USA\",\n  \"range\": \"$10-$50\",\n  \"action\": \"buy\",\n  \"value\": 50\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{BASE_URL}}/api/calculate-rate"
